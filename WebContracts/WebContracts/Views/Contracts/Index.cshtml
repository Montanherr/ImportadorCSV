@model List<WebContracts.Models.Contract>
@{
    ViewData["Title"] = "Lista de Contratos";
}

<h2 class="mt-4 mb-4 text-center">Contratos Importados</h2>

<table class="table table-bordered table-hover table-striped">
    <thead class="table-dark">
        <tr>
            <th>Cliente</th>
            <th>CPF</th>
            <th>Nº do Contrato</th>
            <th>Produto</th>
            <th>Vencimento</th>
            <th>Valor</th>
            <th>Arquivo Importado</th>
            <th>Data da Importação</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.con_customerName</td>
                <td>@c.con_cpf</td>
                <td>@c.con_contractNumber</td>
                <td>@c.con_product</td>
                <td>@c.con_dueDate.ToString("dd/MM/yyyy")</td>
                <td>@c.con_amount.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("pt-BR"))</td>
                <td>@c.Import?.im_fileName</td>
                <td>@c.Import?.im_dateImport.ToString("dd/MM/yyyy HH:mm")</td>
            </tr>
        }
    </tbody>
</table>
