@model WebContracts.DTOs.RegisterDto
@{
    ViewData["Title"] = "Cadastro de Usuário";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow rounded-4">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0">Bem-vindo! Cadastre-se para começar</h3>
                </div>
                <div class="card-body">

                    <!-- Alerta de sucesso ou erro -->
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <strong>Sucesso!</strong> @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
                        </div>
                    }

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <strong>Erro:</strong> @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
                        </div>
                    }

                    <form asp-action="Register" method="post">
                        <div class="mb-3">
                            <label asp-for="UserName" class="form-label">Nome de Usuário</label>
                            <input asp-for="UserName" class="form-control" placeholder="Escolha um nome de usuário" />
                            <div class="form-text">
                                Este será o nome pelo qual você será identificado no sistema.
                            </div>
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UserEmail" class="form-label">Email</label>
                            <input asp-for="UserEmail" class="form-control" placeholder="exemplo@seuemail.com" />
                            <div class="form-text">
                                Informe um e-mail válido. Ele será usado para recuperar sua conta.
                            </div>
                            <span asp-validation-for="UserEmail" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Senha</label>
                            <input asp-for="Password" class="form-control" type="password" placeholder="Crie uma senha segura" />
                            <div class="form-text">
                                A senha deve conter pelo menos 6 caracteres.
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Criar Conta</button>
                        </div>
                    </form>

                    <p class="mt-3 text-center">
                        Já possui uma conta? <a href="/Auth/Login">Entrar</a>.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
